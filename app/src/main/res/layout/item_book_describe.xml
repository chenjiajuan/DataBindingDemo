<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="bookItem"
            type="com.chenjiajuan.databingdemo.model.BooksBean"></variable>

    </data>
<LinearLayout
    android:layout_width="190dp"
    android:layout_height="120dp">
    <ImageView
        android:id="@+id/ivBookPicture"
        android:layout_width="90dp"
        android:layout_height="120dp"
        app:imageUrl="@{bookItem.images.small}"
        />
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{bookItem.title}"
            android:textSize="14sp"
            android:textColor="@color/color_f0b0b0b"
            />
        <TextView
            android:id="@+id/tvBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@{String.valueOf(bookItem.author)}"
            android:textSize="12sp"
            android:textColor="@color/color_f0b0b0b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <RatingBar
            android:id="@+id/rtNumRaters"
            android:layout_width="75dp"
            android:layout_height="16dp"
            android:maxHeight="20dp"
            android:maxWidth="80dp"
            android:numStars="5"
            android:layout_marginTop="2dp"
            android:stepSize="0.5"
            android:rating="@{Float.valueOf(bookItem.rating.average)}"
            android:progress="10"
            style="@android:style/Widget.Holo.RatingBar.Small"
            />
        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@{bookItem.rating.average}"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tvBookDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="10sp"
            android:text="@{bookItem.summary}"
            />
    </LinearLayout>
</LinearLayout>
</layout>